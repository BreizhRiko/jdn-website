<form method="post" action="{{ path('menu_delete', {'id': menu.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer ce menu ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ menu.id) }}">
    <button class="btn btn-sm btn-warning float-end">Supprimer</button>
</form>
